<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <title>
        <%= title %> | E-Shop
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Tailwind CDN (dev) -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen bg-slate-100 flex items-center justify-center">

    <div class="w-full max-w-md mx-4">
        <div class="bg-white rounded-3xl shadow-xl px-8 py-10">

            <!-- Logo -->
            <div class="flex justify-center mb-6">
                <!-- Đổi src thành logo thật của bạn -->
                <img src="/images/logo-shop.png" alt="E-Shop" class="h-12 object-contain"
                    onerror="this.style.display='none'" />
            </div>

            <% if (!success) { %>
                <!-- Trạng thái: link verify lỗi -->
                <div class="flex flex-col items-center text-center space-y-3">
                    <div class="w-12 h-12 rounded-full bg-red-50 flex items-center justify-center mb-2">
                        <svg class="w-7 h-7 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8"
                                d="M12 9v4m0 4h.01M4.93 4.93l14.14 14.14M12 4a8 8 0 100 16 8 8 0 000-16z" />
                        </svg>
                    </div>
                    <h1 class="text-xl font-semibold text-gray-900">Link xác thực không hợp lệ</h1>
                    <p class="text-sm text-gray-500">
                        <%= message %>
                    </p>
                    <div class="mt-4 flex flex-col sm:flex-row gap-2 w-full justify-center">
                        <a href="<%= registerUrl %>"
                            class="inline-flex justify-center items-center px-5 py-2.5 rounded-full bg-black text-white text-sm font-medium hover:bg-gray-900 transition">
                            Đăng ký lại
                        </a>
                        <a href="<%= loginUrl %>"
                            class="inline-flex justify-center items-center px-5 py-2.5 rounded-full border border-gray-300 text-sm font-medium text-gray-700 hover:bg-gray-50 transition">
                            Về trang đăng nhập
                        </a>
                    </div>
                </div>

                <% } else if (done) { %>
                    <!-- Trạng thái: đã đặt mật khẩu xong -->
                    <div class="flex flex-col items-center text-center space-y-3">
                        <div class="w-12 h-12 rounded-full bg-emerald-50 flex items-center justify-center mb-2">
                            <svg class="w-7 h-7 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8"
                                    d="M9 12l2 2 4-4m5 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <h1 class="text-xl font-semibold text-gray-900">Hoàn tất đăng ký</h1>
                        <% if (full_name) { %>
                            <p class="text-sm text-gray-600">Xin chào <span class="font-semibold">
                                    <%= full_name %>
                                </span>,</p>
                            <% } %>
                                <p class="text-sm text-gray-500">
                                    <%= message %>
                                </p>
                                <a href="<%= loginUrl %>"
                                    class="mt-4 inline-flex justify-center items-center px-6 py-2.5 rounded-full bg-black text-white text-sm font-medium hover:bg-gray-900 transition">
                                    Đăng nhập ngay
                                </a>
                    </div>

                    <% } else { %>
                        <!-- Trạng thái: verify OK + form đặt mật khẩu -->
                        <div class="flex flex-col items-center text-center space-y-2 mb-6">
                            <div class="w-12 h-12 rounded-full bg-emerald-50 flex items-center justify-center mb-1">
                                <svg class="w-7 h-7 text-emerald-500" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8"
                                        d="M9 12l2 2 4-4m5 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <h1 class="text-xl font-semibold text-gray-900">Tài khoản đã được xác thực</h1>
                            <p class="text-xs text-gray-500">Email verified successfully. Please set your password.</p>
                        </div>

                        <form method="POST" action="/set-password" class="space-y-4 text-left">
                            <input type="hidden" name="userId" value="<%= userId %>" />

                            <div>
                                <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
                                    Mật khẩu mới
                                </label>
                                <div class="relative">
                                    <input id="password" name="password" type="password" required minlength="6"
                                        class="block w-full h-11 rounded-xl border border-gray-300 px-3 pr-11 text-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                                        placeholder="Nhập mật khẩu mới" />
                                    <button type="button"
                                        class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400 hover:text-gray-600"
                                        data-toggle="password" data-target="#password">
                                        <!-- eye icon -->
                                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6"
                                                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            <circle cx="12" cy="12" r="3" />
                                        </svg>
                                    </button>
                                </div>
                            </div>

                            <div>
                                <label for="confirm_password" class="block text-sm font-medium text-gray-700 mb-1">
                                    Nhập lại mật khẩu
                                </label>
                                <div class="relative">
                                    <input id="confirm_password" name="confirm_password" type="password" required
                                        minlength="6"
                                        class="block w-full h-11 rounded-xl border border-gray-300 px-3 pr-11 text-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                                        placeholder="Nhập lại mật khẩu" />
                                    <button type="button"
                                        class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400 hover:text-gray-600"
                                        data-toggle="password" data-target="#confirm_password">
                                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6"
                                                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            <circle cx="12" cy="12" r="3" />
                                        </svg>
                                    </button>
                                </div>
                            </div>

                            <% if (formError) { %>
                                <p class="text-xs text-red-500 mt-1">
                                    <%= formError %>
                                </p>
                                <% } %>

                                    <button type="submit"
                                        class="w-full inline-flex justify-center items-center mt-2 px-4 py-2.5 rounded-full bg-black text-white text-sm font-semibold hover:bg-gray-900 transition">
                                        Lưu mật khẩu
                                    </button>
                        </form>
                        <% } %>
        </div>
    </div>

    <!-- JS ẩn/hiện mật khẩu -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll("[data-toggle='password']").forEach(function (btn) {
                btn.addEventListener("click", function () {
                    const targetSelector = btn.getAttribute("data-target");
                    const input = document.querySelector(targetSelector);
                    if (!input) return;
                    const isPwd = input.type === "password";
                    input.type = isPwd ? "text" : "password";
                });
            });
        });
    </script>
</body>

</html>