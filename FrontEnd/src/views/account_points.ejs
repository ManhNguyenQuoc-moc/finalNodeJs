<!DOCTYPE html>
<html lang="vi">
<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="/mixishop/css/account.css">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
  <%- include('partials/icons') %>
  <%- include('partials/header') %>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger container mt-3"><%= error %></div>
  <% } %>
  <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success container mt-3"><%= success %></div>
  <% } %>

  <main class="container my-4">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-lg-3 mb-4">
        <%- include('account/_sidebar') %>
      </div>

      <!-- Content -->
      <div class="col-lg-9">
        <div class="account-card p-3 p-md-4 bg-white rounded-3 shadow-sm">
          <div class="d-flex align-items-center justify-content-between mb-3">
            <h3 class="mb-0">Điểm thưởng</h3>
            <a class="btn btn-outline-dark rounded-pill btn-sm" href="#">Nhận thêm điểm</a>
          </div>

          <div class="p-3 border rounded-3 mb-3 d-flex align-items-center gap-3">
            <div class="rounded-circle d-flex align-items-center justify-content-center"
                 style="width:48px;height:48px;background:#fff7e6;">
              <i class="bi bi-coin fs-4"></i>
            </div>
            <div>
              <div class="small text-secondary">Xu đang có</div>
              <div class="fs-4 fw-bold"><%= (typeof points_balance !== 'undefined' ? points_balance : 0) %></div>
            </div>
          </div>

          <ul class="nav nav-tabs mb-3">
            <li class="nav-item"><span class="nav-link active">Tất cả lịch sử</span></li>
          </ul>

          <% const history = (typeof points_history !== 'undefined' && points_history) ? points_history : []; %>
          <% if (!history.length) { %>
            <div class="text-center text-secondary py-5">
              Chưa có giao dịch điểm trong 1 năm gần đây.
            </div>
          <% } else { %>
            <div class="list-group">
              <% history.forEach(p => { %>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <div class="fw-medium"><%= p.note || 'Điểm thưởng' %></div>
                    <div class="small text-secondary">
                      <%= p.createdAt ? new Date(p.createdAt).toLocaleString('vi-VN') : '' %>
                    </div>
                  </div>
                  <div class="fw-semibold <%= (p.amount||0) >= 0 ? 'text-success' : 'text-danger' %>">
                    <%= (p.amount||0) >= 0 ? '+' : '' %><%= p.amount || 0 %>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>
  <%- include('partials/cart_drawer') %>
  <%- include('partials/quick_view') %>

  <!-- Scripts -->
  <script src="/mixishop/js/plugins/bootstrap.bundle.min.js"></script>
  <script src="/mixishop/js/plugins/jquery.min.js"></script>
  <script src="/mixishop/js/theme.js"></script>
</body>
</html>
