<!DOCTYPE html>
<html lang="vi">
<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="/mixishop/css/account.css">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
  <%- include('partials/icons') %>
  <%- include('partials/header') %>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger container mt-3"><%= error %></div>
  <% } %>
  <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success container mt-3"><%= success %></div>
  <% } %>

  <main class="container my-4">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-lg-3 mb-4">
        <%- include('account/_sidebar') %>
      </div>

      <!-- Content -->
      <div class="col-lg-9">
        <div class="account-card p-3 p-md-4 bg-white rounded-3 shadow-sm">
          <h3 class="mb-3">Kho Voucher</h3>

          <% const list = (typeof vouchers !== 'undefined' && vouchers) ? vouchers : []; %>
          <% if (!list.length) { %>
            <div class="text-center text-secondary py-5">Chưa có voucher nào.</div>
          <% } else { %>

            <div class="row g-3">
              <% list.forEach(v => { 
                   const now = new Date();
                   const exp = v.expires_at ? new Date(v.expires_at) : null;
                   const isExpired = exp && exp < now;

                   const percent = Number(v.percentage || v.percent || 0);
                   const value   = Number(v.discount_value || v.value || 0);
                   const minOrd  = Number(v.min_order || v.minimum_order || 0);
              %>
                <div class="col-md-6">
                  <div class="voucher-card border rounded-3 p-3 d-flex gap-3 align-items-start">
                    <div class="voucher-logo rounded-3 d-flex align-items-center justify-content-center">
                      <i class="bi bi-ticket-perforated"></i>
                    </div>

                    <div class="flex-grow-1">
                      <div class="d-flex align-items-center gap-2">
                        <div class="fw-semibold text-uppercase"><%= v.code %></div>
                        <% if (isExpired) { %>
                          <span class="badge bg-secondary">Hết hạn</span>
                        <% } else { %>
                          <span class="badge bg-success-subtle text-success border border-success-subtle">Còn hạn</span>
                        <% } %>
                      </div>

                      <div class="small text-secondary">
                        <%= v.description || 'Ưu đãi cho đơn hàng của bạn' %>
                      </div>

                      <ul class="list-unstyled small mt-2 mb-0">
                        <% if (percent) { %>
                          <li>Giảm <strong><%= percent %>%</strong> (tối đa <%= value ? formatPrice(value) : '—' %>)</li>
                        <% } else { %>
                          <li>Giảm <strong><%= value ? formatPrice(value) : '—' %></strong></li>
                        <% } %>
                        <li>Đơn tối thiểu: <%= minOrd ? formatPrice(minOrd) : '—' %></li>
                        <li>HSD: <%= exp ? exp.toLocaleString('vi-VN') : '—' %></li>
                      </ul>

                      <div class="mt-2 d-flex justify-content-end">
                        <button 
                          class="btn btn-outline-dark btn-sm"
                          <%= isExpired ? 'disabled' : '' %>>
                          Dùng sau
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>

          <% } %>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>
  <%- include('partials/cart_drawer') %>
  <%- include('partials/quick_view') %>

  <!-- Scripts -->
  <script src="/mixishop/js/plugins/bootstrap.bundle.min.js"></script>
  <script src="/mixishop/js/plugins/jquery.min.js"></script>
  <script src="/mixishop/js/theme.js"></script>
</body>
</html>
