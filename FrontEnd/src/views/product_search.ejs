      /* Products Grid */
      .products-grid {
        animation: fadeIn 0.6s ease-out;
      }

      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }

      /* Pagination Styles */
      .search-pagination-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem 0;
      }

      .pagination-modern {
