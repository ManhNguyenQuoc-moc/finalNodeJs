<% function statusClasses(s) {
  switch (s) {
    case 'pending':   return 'bg-amber-50 text-amber-700 border-amber-200';
    case 'confirmed': return 'bg-blue-50 text-blue-700 border-blue-200';
    case 'shipping':  return 'bg-violet-50 text-violet-700 border-violet-200';
    case 'delivered': return 'bg-emerald-50 text-emerald-700 border-emerald-200';
    case 'cancelled': return 'bg-rose-50 text-rose-700 border-rose-200';
    default:          return 'bg-slate-50 text-slate-700 border-slate-200';
  }
} %>
<span class="inline-flex items-center px-2.5 py-1 rounded-full border text-xs font-medium <%= statusClasses(status) %>">
  <%= (typeof label !== 'undefined' && label !== null) ? label : status %>
</span>
