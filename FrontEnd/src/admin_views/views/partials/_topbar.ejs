<header class="bg-white/80 border-b backdrop-blur sticky top-0 z-30" x-data="{menu:false}">
  <div class="max-w-[1400px] mx-auto px-4 py-3 flex items-center justify-between gap-3">
    <div class="flex items-center gap-3">
      <button class="md:hidden inline-flex items-center justify-center h-9 w-9 rounded-lg hover:bg-slate-100" @click="$root.open=true">
        <i class="lucide lucide-menu"></i>
      </button>
      <h1 class="text-lg font-semibold"><%= pageHeading || "Tổng quan" %></h1>
    </div>

    <div class="relative">
      <button class="h-9 w-9 rounded-full bg-brand-500 text-white grid place-items-center font-medium focus:outline-none"
              @click="menu=!menu" @keydown.escape="menu=false" aria-haspopup="menu" aria-expanded="false">
        <%= (admin && admin.full_name) ? admin.full_name[0] : "A" %>
      </button>

      <!-- Dropdown -->
      <div x-show="menu" x-cloak @click.outside="menu=false"
           class="absolute right-0 mt-2 w-56 bg-white border rounded-xl shadow-soft overflow-hidden">
        <div class="px-4 py-3">
          <div class="text-sm text-slate-500">Đăng nhập với</div>
          <div class="font-semibold"><%= (admin && admin.full_name) || 'Admin' %></div>
        </div>
        <div class="border-t"></div>
        <a href="/admin/account/password" class="flex items-center gap-2 px-4 py-2.5 hover:bg-slate-50 text-[15px]">
          <i class="lucide lucide-key h-4 w-4"></i> Đổi mật khẩu
        </a>
        <form action="/admin/logout" method="post">
          <button type="submit" class="w-full text-left flex items-center gap-2 px-4 py-2.5 hover:bg-slate-50 text-[15px]">
            <i class="lucide lucide-log-out h-4 w-4"></i> Đăng xuất
          </button>
        </form>
      </div>
    </div>
  </div>
</header>
