<header class="sticky top-0 z-30 bg-[#0E141B] border-b border-white/10 shadow-xl transition-all duration-300"
  :class="!open ? 'pl-0' : (mini ? 'pl-20' : 'pl-72')">
  <div class="px-6 h-24 flex items-center justify-between gap-6">

    <!-- LEFT -->
    <div class="px-6 flex items-center gap-6 min-w-0 h-full">

      <!-- Sidebar toggle -->
      <button class="h-11 w-11 rounded-lg"></button>

      <!-- Logo + Title -->
      <div class="flex items-center gap-2">
        <span class="text-emerald-400 font-bold text-2xl">Mixi</span>
        <span class="text-white text-xl font-semibold">Admin</span>
      </div>

      <!-- Quick Nav -->
      <nav class="hidden md:flex items-center gap-4 ml-6 text-base">
        <a href="/admin" class="px-4 py-2 rounded-md transition flex items-center gap-1" :class="activePath === '/admin'
              ? 'bg-white/10 text-white'
              : 'text-white/70 hover:text-white'">
          Dashboard
        </a>

        <a href="/admin/products" class="px-4 py-2 rounded-md transition flex items-center gap-1" :class="activePath.startsWith('/admin/products')
              ? 'bg-white/10 text-white'
              : 'text-white/70 hover:text-white'">
          Sản phẩm
        </a>

        <a href="/admin/orders" class="px-4 py-2 rounded-md transition flex items-center gap-1" :class="activePath.startsWith('/admin/orders')
              ? 'bg-white/10 text-white'
              : 'text-white/70 hover:text-white'">
          Đơn hàng
        </a>

        <a href="/admin/users" class="px-4 py-2 rounded-md transition flex items-center gap-1" :class="activePath.startsWith('/admin/users')
              ? 'bg-white/10 text-white'
              : 'text-white/70 hover:text-white'">
          Khách hàng
        </a>
      </nav>

    </div>

    <!-- RIGHT ACTIONS -->
    <div class="flex items-center gap-4 relative" x-data="{ menu:false }">

      <!-- Search -->
      <div class="hidden lg:block relative">
        <input class="h-12 w-72 bg-white/5 text-white border border-white/10 rounded-lg pl-12 pr-4
                 placeholder:text-white/40 focus:border-emerald-400 focus:ring-2
                 focus:ring-emerald-400/40 outline-none text-base" type="search" placeholder="Tìm kiếm..." />
        <i data-lucide="search" class="w-5 h-5 text-white/40 absolute left-4 top-1/2 -translate-y-1/2"></i>
      </div>

      <!-- Notification -->
      <button class="h-12 w-12 p-3 rounded-lg bg-white/5 border border-white/10
               hover:bg-white/10 text-emerald-300 relative">
        <i data-lucide="bell" class="h-6 w-6"></i>
      </button>

      <!-- Account Button -->
      <button class="h-12 w-12 rounded-full bg-emerald-400 text-black font-bold text-lg shadow-lg
               hover:opacity-90 transition" @click="menu = !menu" aria-haspopup="true" :aria-expanded="menu">
        <%= (admin && admin.full_name) ? admin.full_name[0].toUpperCase() : "A" %>
      </button>

      <!-- Dropdown -->
      <div x-show="menu" x-cloak @click.outside="menu = false" x-transition class="absolute right-0 top-16 w-60 bg-[#0E141B] border border-white/10
               rounded-xl shadow-xl text-white text-base">
        <div class="px-5 py-4 border-b border-white/10">
          <p class="text-xs text-white/50">Đăng nhập với</p>
          <p class="text-base font-semibold">
            <%= (admin && admin.full_name) || 'Admin' %>
          </p>
        </div>

        <a href="/admin/account/password" class="flex items-center gap-2 px-5 py-3 hover:bg-white/5">
          <i class="lucide lucide-key h-5 w-5 text-emerald-300"></i>
          Đổi mật khẩu
        </a>

        <form action="/admin/logout" method="post">
          <button type="submit" class="flex items-center gap-2 px-5 py-3 w-full hover:bg-white/5">
            <i class="lucide lucide-log-out h-5 w-5 text-emerald-300"></i>
            Đăng xuất
          </button>
        </form>
      </div>
    </div>

  </div>
</header>