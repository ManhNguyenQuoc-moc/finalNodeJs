<% layout('layouts/admin') %>
<section class="space-y-6 max-w-xl">
  <h2 class="text-xl font-semibold">Đổi mật khẩu</h2>

  <% if (typeof errorMsg !== 'undefined' && errorMsg) { %>
    <div class="rounded-xl bg-rose-50 border border-rose-200 text-rose-700 px-4 py-3"><%= errorMsg %></div>
  <% } %>
  <% if (typeof successMsg !== 'undefined' && successMsg) { %>
    <div class="rounded-xl bg-emerald-50 border border-emerald-200 text-emerald-700 px-4 py-3"><%= successMsg %></div>
  <% } %>

  <form class="card space-y-4" method="post" action="/admin/account/password">
    <div>
      <label class="label">Mật khẩu hiện tại</label>
      <input class="input" type="password" name="current_password" required>
    </div>
    <div>
      <label class="label">Mật khẩu mới</label>
      <input class="input" type="password" name="new_password" minlength="6" required>
    </div>
    <div>
      <label class="label">Nhập lại mật khẩu mới</label>
      <input class="input" type="password" name="confirm_password" minlength="6" required>
    </div>
    <div class="flex justify-end gap-2">
      <a href="/admin" class="btn ghost">Hủy</a>
      <button class="btn-primary" type="submit">Cập nhật</button>
    </div>
  </form>
</section>
