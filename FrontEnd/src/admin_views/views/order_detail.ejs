<% layout('layouts/admin') %>
  <section class="space-y-6">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-bold tracking-tight text-slate-900">
        Chi tiết đơn <span class="font-mono text-lg text-indigo-600">#<%= order._id %></span>
      </h2>
      <a href="/admin/orders"
        class="inline-flex items-center rounded-lg px-4 py-2 text-sm font-semibold text-slate-700 ring-1 ring-slate-300 hover:bg-slate-50 transition">
        <i class="lucide lucide-arrow-left mr-2 w-4 h-4"></i> Quay lại
      </a>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
      
      <div class="rounded-2xl border border-slate-200 bg-white shadow-sm lg:col-span-2 overflow-hidden">
        <div class="flex items-center justify-between border-b border-slate-100 px-6 py-4 bg-slate-50/50">
          <h3 class="text-base font-bold tracking-wide text-slate-900">Sản phẩm</h3>
        </div>

        <div class="overflow-x-auto">
          <table class="w-full text-sm text-left">
            <thead class="bg-slate-100/80 text-slate-900 uppercase text-[11px] font-bold">
              <tr>
                <th class="px-6 py-3">Sản phẩm</th>
                <th class="px-6 py-3">SKU</th>
                <th class="px-6 py-3 text-center">SL</th>
                <th class="px-6 py-3 text-right">Đơn giá</th>
                <th class="px-6 py-3 text-right">Tổng</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
              <% order.items.forEach(it=>{ %>
                <tr class="hover:bg-slate-50 transition-colors">
                  <td class="px-6 py-4 align-middle">
                    <div class="font-bold text-slate-900 max-w-[280px] truncate" title="<%= it.product_name_snapshot || it.name_snapshot %>">
                      <%= it.product_name_snapshot || it.name_snapshot || it.product_name || 'Sản phẩm' %>
                    </div>
                    <% if(it.variant_snapshot) { %>
                      <div class="text-xs text-slate-500 mt-0.5"><%= it.variant_snapshot %></div>
                    <% } %>
                  </td>
                  
                  <td class="px-6 py-4 align-middle">
                    <span class="font-mono text-xs font-semibold text-slate-700 bg-slate-100 px-2 py-1 rounded border border-slate-200">
                      <%= it.product_variant_sku || it.variant_sku || '—' %>
                    </span>
                  </td>
                  
                  <td class="px-6 py-4 text-center font-semibold text-slate-900">
                    x<%= it.quantity %>
                  </td>
                  
                  <td class="px-6 py-4 text-right tabular-nums text-slate-600">
                    <%= (it.price_at_purchase || it.price_at_time || 0).toLocaleString('vi-VN',{style:'currency',currency:'VND'}) %>
                  </td>
                  
                  <td class="px-6 py-4 text-right tabular-nums font-bold text-slate-900">
                    <%= ((it.price_at_purchase || it.price_at_time || 0) * it.quantity).toLocaleString('vi-VN',{style:'currency',currency:'VND'}) %>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="space-y-6">
        
        <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
          
          <div class="mb-5">
            <div class="text-xs font-bold uppercase tracking-wider text-slate-500 mb-2">Khách hàng</div>
            <div class="flex items-center gap-3">
              <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold">
                <%= (order.user && order.user.full_name ? order.user.full_name.charAt(0).toUpperCase() : 'G') %>
              </div>
              <div>
                <div class="font-bold text-slate-900 text-sm">
                  <%= (order.user && order.user.full_name) || 'Khách vãng lai' %>
                </div>
                <div class="text-xs text-slate-500 font-medium">
                  <%= (order.user && order.user.email) || order.guest_email || 'No email' %>
                </div>
              </div>
            </div>
          </div>

          <div class="border-t border-slate-100 my-4"></div>

          <div>
            <div class="text-xs font-bold uppercase tracking-wider text-slate-500 mb-2">Địa chỉ giao hàng</div>
            <div class="text-sm font-medium text-slate-800 leading-relaxed">
              <% if (order.address) { %>
                <div class="flex gap-2">
                  <i class="lucide lucide-map-pin w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0"></i>
                  <span>
                    <%= order.address.address_line || [order.address.detail, order.address.ward, order.address.district, order.address.city].filter(Boolean).join(', ') %>
                  </span>
                </div>
                <div class="flex gap-2 mt-1">
                  <i class="lucide lucide-phone w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0"></i>
                  <span><%= (order.user && order.user.phone) || order.phone || '---' %></span>
                </div>
              <% } else { %>
                <span class="italic text-slate-400">Không có thông tin địa chỉ</span>
              <% } %>
            </div>
          </div>
        </div>

        <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
          
          <div class="text-xs font-bold uppercase tracking-wider text-slate-500 mb-3">Thanh toán</div>

          <div class="grid grid-cols-1 gap-3 mb-5">
            
            <div class="flex justify-between items-center p-2 rounded bg-slate-50">
              <span class="text-xs font-medium text-slate-600">Tổng tạm tính</span>
              <span class="font-semibold text-slate-900 tabular-nums">
                <%= (order.total_amount||0).toLocaleString('vi-VN',{style:'currency',currency:'VND'}) %>
              </span>
            </div>

            <% if ((order.total_amount - order.final_amount) > 0) { %>
            <div class="flex justify-between items-center p-2 rounded bg-emerald-50 border border-emerald-100">
              <span class="text-xs font-bold text-emerald-700 flex items-center gap-1">
                <i class="lucide lucide-ticket"></i>
                Giảm giá
                <% if(order.discount_code) { %>
                  <span class="ml-1 px-1.5 py-0.5 rounded bg-emerald-200 text-[10px]">
                    <%= order.discount_code.code || order.discount_code %>
                  </span>
                <% } %>
              </span>
              <span class="font-bold text-emerald-700 tabular-nums">
                - <%= (order.total_amount - order.final_amount).toLocaleString('vi-VN',{style:'currency',currency:'VND'}) %>
              </span>
            </div>
            <% } %>

            <div class="flex justify-between items-center p-3 rounded-lg bg-indigo-50 border border-indigo-100">
              <span class="text-sm font-bold text-indigo-900">THÀNH TIỀN</span>
              <span class="text-lg font-extrabold text-indigo-700 tabular-nums">
                <%= (order.final_amount||0).toLocaleString('vi-VN',{style:'currency',currency:'VND'}) %>
              </span>
            </div>
          </div>

          <div class="border-t border-slate-100 my-4"></div>

          <div>
            <div class="mb-2 text-xs font-bold uppercase text-slate-500">Trạng thái đơn hàng</div>
            
            <div class="mb-4">
              <%- include('partials/_statusBadge', {status:order.current_status}) %>
            </div>

            <form method="post" action="/admin/orders/<%= order._id %>/status" class="flex gap-2">
              <div class="relative flex-grow">
                <select
                  class="h-10 w-full appearance-none rounded-lg border border-slate-300 bg-white pl-3 pr-8 text-sm font-medium text-slate-700 shadow-sm focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
                  name="status">
                  <% ['pending','confirmed','shipping','delivered','cancelled'].forEach(s=>{ %>
                    <option value="<%= s %>" <%=order.current_status===s?'selected':'' %>>
                      <%= s.charAt(0).toUpperCase() + s.slice(1) %>
                    </option>
                  <% }) %>
                </select>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-slate-500">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                </div>
              </div>
              
              <button type="submit"
                class="h-10 px-4 rounded-lg bg-indigo-600 text-sm font-bold text-white shadow hover:bg-indigo-700 transition focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1">
                Cập nhật
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
      <div class="flex items-center justify-between border-b border-slate-100 px-6 py-4 bg-slate-50/50">
        <h3 class="text-base font-bold tracking-wide text-slate-900">Lịch sử trạng thái</h3>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full text-sm text-left">
          <thead class="bg-slate-50 text-slate-500 uppercase text-[11px] font-semibold">
            <tr>
              <th class="px-6 py-3">Thời gian</th>
              <th class="px-6 py-3">Trạng thái</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            <% (order.status_history||[]).slice().reverse().forEach(s=>{ %>
              <tr class="hover:bg-slate-50">
                <td class="px-6 py-3 whitespace-nowrap text-slate-700 font-medium">
                  <%= new Date(s.timestamp).toLocaleString('vi-VN', { hour12: false }) %>
                </td>
                <td class="px-6 py-3">
                  <%- include('partials/_statusBadge', {status:s.status}) %>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </section>