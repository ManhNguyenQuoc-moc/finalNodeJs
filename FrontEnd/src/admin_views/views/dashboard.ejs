<% layout('layouts/admin') %>

<div 
  x-data="{ tab: '<%= (filters && filters.mode) || 'simple' %>' }" 
  class="space-y-6"
>
  <!-- HEADER + FILTERS -->
  <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-slate-900 tracking-tight flex items-center gap-2">
        <i data-lucide="gauge" class="w-6 h-6 text-emerald-500"></i>
        Dashboard
      </h1>
      <p class="mt-1 text-sm text-slate-500">
        Tổng quan hiệu suất cửa hàng và thống kê theo khoảng thời gian.
      </p>
    </div>

    <!-- Tabs Simple / Advanced -->
    <div class="inline-flex rounded-xl bg-slate-100 p-1 text-sm font-medium">
      <button
        type="button"
        class="px-3 py-1.5 rounded-lg flex items-center gap-1.5 transition-all"
        :class="tab === 'simple' 
          ? 'bg-white shadow-soft text-slate-900' 
          : 'text-slate-500 hover:text-slate-800'"
        @click="tab = 'simple'"
      >
        <i data-lucide="sparkles" class="w-4 h-4"></i>
        Cơ bản
      </button>
      <button
        type="button"
        class="px-3 py-1.5 rounded-lg flex items-center gap-1.5 transition-all"
        :class="tab === 'advanced' 
          ? 'bg-white shadow-soft text-slate-900' 
          : 'text-slate-500 hover:text-slate-800'"
        @click="tab = 'advanced'"
      >
        <i data-lucide="line-chart" class="w-4 h-4"></i>
        Nâng cao
      </button>
    </div>
  </div>

  <!-- FILTER FORM (áp dụng cho cả 2 tab, submit sẽ reload với query mới) -->
  <form
    action="/admin"
    method="get"
    class="flex flex-wrap items-center gap-3 rounded-2xl border border-slate-200 bg-white px-4 py-3 shadow-sm"
  >
    <input type="hidden" name="mode" :value="tab" />

    <div class="flex items-center gap-2">
      <label class="text-xs font-semibold text-slate-500 uppercase tracking-wide">
        Từ ngày
      </label>
      <input
        type="date"
        class="h-9 rounded-lg border border-slate-200 bg-slate-50 px-3 text-sm text-slate-700 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500/30 outline-none"
        name="start"
        value="<%= (filters && filters.start) || '' %>"
      />
    </div>

    <span class="text-slate-400">→</span>

    <div class="flex items-center gap-2">
      <label class="text-xs font-semibold text-slate-500 uppercase tracking-wide">
        Đến ngày
      </label>
      <input
        type="date"
        class="h-9 rounded-lg border border-slate-200 bg-slate-50 px-3 text-sm text-slate-700 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500/30 outline-none"
        name="end"
        value="<%= (filters && filters.end) || '' %>"
      />
    </div>

    <div class="flex items-center gap-2">
      <label class="text-xs font-semibold text-slate-500 uppercase tracking-wide">
        Độ chi tiết
      </label>
      <select
        class="h-9 rounded-lg border border-slate-200 bg-slate-50 px-2 text-sm text-slate-700 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500/30 outline-none"
        name="granularity"
      >
        <option value="year" <%= (filters && filters.granularity)==='year' ? 'selected' : '' %>>Năm</option>
        <option value="quarter" <%= (filters && filters.granularity)==='quarter' ? 'selected' : '' %>>Quý</option>
        <option value="month" <%= (filters && filters.granularity)==='month' ? 'selected' : '' %>>Tháng</option>
        <option value="week" <%= (filters && filters.granularity)==='week' ? 'selected' : '' %>>Tuần</option>
      </select>
    </div>

    <div class="ml-auto flex items-center gap-2">
      <button
        type="submit"
        class="inline-flex items-center gap-2 rounded-lg bg-emerald-600 px-3.5 py-2 text-sm font-semibold text-white shadow-soft hover:bg-emerald-700 active:scale-[0.98] transition"
      >
        <i data-lucide="sliders-horizontal" class="w-4 h-4"></i>
        Áp dụng
      </button>
    </div>
  </form>

  <!-- SIMPLE DASHBOARD -->
  <section x-show="tab === 'simple'" x-transition.opacity.duration.200ms class="space-y-5">
    <!-- KPI cards -->
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-4">
      <% (kpis || []).forEach(function(k) { %>
        <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm hover:shadow-soft transition-all duration-200 hover:-translate-y-0.5">
          <div class="flex items-center justify-between">
            <div>
              <div class="text-xs font-semibold text-slate-500 uppercase tracking-wide">
                <%= k.label %>
              </div>
              <div class="mt-2 text-2xl font-semibold text-slate-900">
                <%= k.valueDisplay || k.value %>
              </div>
              <div class="mt-1 text-xs">
                <span class="inline-flex items-center gap-1 rounded-full px-2 py-0.5
                  <%= k.delta >= 0 ? 'bg-emerald-50 text-emerald-700' : 'bg-rose-50 text-rose-700' %>">
                  <i 
                    data-lucide="<%= k.delta >= 0 ? 'arrow-up-right' : 'arrow-down-right' %>" 
                    class="w-3 h-3"
                  ></i>
                  <%= k.delta >= 0 ? '+' + k.delta : k.delta %>% so với kỳ trước
                </span>
              </div>
            </div>
            <div class="grid h-11 w-11 place-items-center rounded-xl bg-emerald-50 text-emerald-600 ring-1 ring-emerald-200">
              <i class="lucide lucide-<%= k.icon || 'bar-chart-3' %> w-5 h-5"></i>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Charts -->
    <div class="grid grid-cols-1 gap-4 xl:grid-cols-3">
      <!-- Doanh thu & Lợi nhuận -->
      <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm xl:col-span-2">
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-sm font-semibold tracking-wide text-slate-800 flex items-center gap-2">
            <i data-lucide="line-chart" class="w-4 h-4 text-emerald-500"></i>
            Doanh thu & Lợi nhuận theo thời gian
          </h3>
          <span class="text-xs text-slate-400">
            Nguồn: dữ liệu hệ thống
          </span>
        </div>
        <div class="h-[320px]">
          <canvas id="revenueProfitChart"></canvas>
        </div>
      </div>

      <!-- Đơn hàng -->
      <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-sm font-semibold tracking-wide text-slate-800 flex items-center gap-2">
            <i data-lucide="receipt" class="w-4 h-4 text-emerald-500"></i>
            Số đơn hàng theo thời gian
          </h3>
        </div>
        <div class="h-[320px]">
          <canvas id="ordersChart"></canvas>
        </div>
      </div>

      <!-- Top sản phẩm -->
      <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm xl:col-span-3">
        <div class="mb-3 flex items-center justify-between">
          <h3 class="text-sm font-semibold tracking-wide text-slate-800 flex items-center gap-2">
            <i data-lucide="stars" class="w-4 h-4 text-emerald-500"></i>
            Sản phẩm bán chạy
          </h3>
          <span class="text-xs text-slate-500">
            Top <%= (topProducts || []).length %> theo số lượng bán
          </span>
        </div>
        <div class="h-[340px]">
          <canvas id="topProductsChart"></canvas>
        </div>
      </div>
    </div>
  </section>

  <!-- ADVANCED DASHBOARD -->
  <section x-show="tab === 'advanced'" x-transition.opacity.duration.200ms class="space-y-5">
    <!-- SUMMARY / COMPARE -->
    <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
      <div class="flex flex-wrap items-center justify-between gap-3 mb-3">
        <div>
          <h3 class="text-sm font-semibold tracking-wide text-slate-800 flex items-center gap-2">
            <i data-lucide="bar-chart-3" class="w-4 h-4 text-emerald-500"></i>
            So sánh doanh thu, lợi nhuận & số đơn theo mốc thời gian
          </h3>
        </div>
      </div>
      <div class="h-[360px]">
        <canvas id="advancedCompareChart"></canvas>
      </div>
    </div>

    <!-- PRODUCT COMPARISON -->
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
        <h3 class="text-sm font-semibold tracking-wide text-slate-800 mb-3 flex items-center gap-2">
          <i data-lucide="shopping-bag" class="w-4 h-4 text-emerald-500"></i>
          Số lượng sản phẩm & loại sản phẩm
        </h3>
        <div class="h-[260px]">
          <canvas id="advancedProductCountChart"></canvas>
        </div>
      </div>

      <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
        <h3 class="text-sm font-semibold tracking-wide text-slate-800 mb-3 flex items-center gap-2">
          <i data-lucide="pie-chart" class="w-4 h-4 text-emerald-500"></i>
          Phân bổ SKU theo số lượng bán
        </h3>
        <div class="h-[260px]">
          <canvas id="advancedProductTypePie"></canvas>
        </div>
      </div>
    </div>

    <!-- CUSTOMERS -->
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-semibold tracking-wide text-slate-800 flex items-center gap-2">
            <i data-lucide="users" class="w-4 h-4 text-emerald-500"></i>
            Phân khúc khách hàng
          </h3>
        </div>
        <div class="h-[260px]">
          <canvas id="advancedCustomerSegmentChart"></canvas>
        </div>
        <p class="mt-2 text-xs text-slate-500" id="advancedCustomerLtvText"></p>
      </div>

      <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-semibold tracking-wide text-slate-800 flex items-center gap-2">
            <i data-lucide="rotate-ccw" class="w-4 h-4 text-emerald-500"></i>
            Khách mới vs quay lại
          </h3>
        </div>
        <div class="h-[260px]">
          <canvas id="advancedCustomerNewReturningChart"></canvas>
        </div>
      </div>
    </div>

    <!-- ORDERS -->
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-semibold tracking-wide text-slate-800 flex items-center gap-2">
            <i data-lucide="check-circle-2" class="w-4 h-4 text-emerald-500"></i>
            Trạng thái đơn hàng
          </h3>
        </div>
        <div class="h-[260px]">
          <canvas id="advancedOrderStatusChart"></canvas>
        </div>
      </div>

      <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
        <div class="flex items-center justify-between mb-1">
          <h3 class="text-sm font-semibold tracking-wide text-slate-800 flex items-center gap-2">
            <i data-lucide="store" class="w-4 h-4 text-emerald-500"></i>
            Kênh bán & AOV
          </h3>
          <span class="text-xs text-slate-500" id="advancedOrderAovText"></span>
        </div>
        <div class="h-[260px]">
          <canvas id="advancedOrderChannelChart"></canvas>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Inject server data -->
<script>
  window.__DASHBOARD__ = {
    charts: <%- JSON.stringify(charts || {}) %>,
    kpis: <%- JSON.stringify(kpis || []) %>,
    topProducts: <%- JSON.stringify(topProducts || []) %>,
    filters: <%- JSON.stringify(filters || {}) %>,
    advanced: <%- JSON.stringify(advanced || {}) %>
  };
</script>

<!-- Chart.js code -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    if (!window.Chart) {
      console.error("Chart.js chưa load. Kiểm tra <script src='https://cdn.jsdelivr.net/npm/chart.js'> trong layout.");
      return;
    }

    const dashboard = window.__DASHBOARD__ || {};
    const chartsData = dashboard.charts || {};
    const topProducts = dashboard.topProducts || [];

    // ===== SIMPLE: Doanh thu & Lợi nhuận =====
    (function () {
      const el = document.getElementById("revenueProfitChart");
      if (!el || !chartsData.revenue) return;

      const labels = chartsData.revenue.labels || [];
      const revenue = chartsData.revenue.revenue || [];
      const profit = chartsData.revenue.profit || [];

      new Chart(el, {
        type: "line",
        data: {
          labels,
          datasets: [
            {
              label: "Doanh thu",
              data: revenue,
              borderWidth: 2,
              tension: 0.35,
              pointRadius: 3,
              pointHoverRadius: 5
            },
            {
              label: "Lợi nhuận",
              data: profit,
              borderWidth: 2,
              borderDash: [4, 4],
              tension: 0.35,
              pointRadius: 3,
              pointHoverRadius: 5
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          interaction: { mode: "index", intersect: false },
          plugins: {
            legend: {
              position: "bottom",
              labels: { boxWidth: 12 }
            },
            tooltip: {
              callbacks: {
                label: function (ctx) {
                  const v = ctx.parsed.y;
                  if (v >= 1_000_000) return `${ctx.dataset.label}: ${(v/1_000_000).toFixed(1)}M`;
                  return `${ctx.dataset.label}: ${v}`;
                }
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                callback: function (v) {
                  if (v >= 1_000_000) return (v / 1_000_000) + "M";
                  return v;
                }
              }
            }
          },
          animation: {
            duration: 700,
            easing: "easeOutQuart"
          }
        }
      });
    })();

    // ===== SIMPLE: Số đơn hàng =====
    (function () {
      const el = document.getElementById("ordersChart");
      if (!el || !chartsData.orders) return;

      const labels = chartsData.orders.labels || [];
      const orders = chartsData.orders.orders || [];

      new Chart(el, {
        type: "bar",
        data: {
          labels,
          datasets: [
            {
              label: "Số đơn",
              data: orders,
              borderWidth: 1,
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false }
          },
          scales: {
            y: {
              beginAtZero: true,
              precision: 0
            }
          },
          animation: {
            duration: 600,
            easing: "easeOutCubic"
          }
        }
      });
    })();

    // ===== SIMPLE: Top sản phẩm (horizontal bar) =====
    (function () {
      const el = document.getElementById("topProductsChart");
      if (!el || !topProducts.length) return;

      const labels = topProducts.map(p => p.name);
      const values = topProducts.map(p => p.total_sold || 0);

      new Chart(el, {
        type: "bar",
        data: {
          labels,
          datasets: [
            {
              label: "Số lượng bán ra",
              data: values,
              borderWidth: 1,
            }
          ]
        },
        options: {
          indexAxis: "y",
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false },
            tooltip: {
              callbacks: {
                label: (ctx) => `Bán ra: ${ctx.parsed.x}`
              }
            }
          },
          scales: {
            x: {
              beginAtZero: true
            }
          },
          animation: {
            duration: 600,
            easing: "easeOutCubic"
          }
        }
      });
    })();

    // ===== ADVANCED: dữ liệu từ backend =====
    const advanced = dashboard.advanced || {};
    const advCharts = advanced.chartsAdvanced || {};
    const advCustomers = advanced.customers || {};
    const advOrders = advanced.orders || {};

    // ==== SUMMARY / COMPARE (advanced/summary) ====
    (function () {
      const el = document.getElementById("advancedCompareChart");
      if (!el || !advCharts.compare) return;

      const d = advCharts.compare;
      const labels = d.labels || [];
      const orders = d.orders || [];
      const revenue = d.revenue || [];
      const profit = d.profit || [];

      if (!labels.length) return;

      new Chart(el, {
        type: "bar",
        data: {
          labels,
          datasets: [
            {
              type: "bar",
              label: "Số đơn",
              data: orders,
              borderWidth: 1
            },
            {
              type: "line",
              label: "Doanh thu",
              data: revenue,
              borderWidth: 2,
              tension: 0.35,
              yAxisID: "y1"
            },
            {
              type: "line",
              label: "Lợi nhuận",
              data: profit,
              borderWidth: 2,
              borderDash: [4, 4],
              tension: 0.35,
              yAxisID: "y1"
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          interaction: { mode: "index", intersect: false },
          plugins: {
            legend: { position: "bottom" }
          },
          scales: {
            y: {
              beginAtZero: true,
              position: "left",
              title: { display: true, text: "Số đơn" }
            },
            y1: {
              beginAtZero: true,
              position: "right",
              grid: { drawOnChartArea: false },
              title: { display: true, text: "Doanh thu / Lợi nhuận" }
            }
          }
        }
      });
    })();

    // ==== PRODUCT COUNT (advanced/product-comparison.yearly) ====
    (function () {
      const el = document.getElementById("advancedProductCountChart");
      if (!el || !advCharts.productsCount) return;

      const d = advCharts.productsCount;
      const labels = d.labels || [];
      const values = d.productsSold || [];

      if (!labels.length) return;

      new Chart(el, {
        type: "bar",
        data: {
          labels,
          datasets: [
            {
              label: "Số sản phẩm bán",
              data: values,
              borderWidth: 1
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { display: false } },
          scales: { y: { beginAtZero: true } }
        }
      });
    })();

    // ==== PRODUCT DISTRIBUTION (advanced/product-comparison.distribution) ====
    (function () {
      const el = document.getElementById("advancedProductTypePie");
      if (!el || !advCharts.productDistribution) return;

      const d = advCharts.productDistribution;
      const labels = d.labels || [];
      const values = d.quantities || [];

      if (!labels.length) return;

      new Chart(el, {
        type: "pie",
        data: {
          labels,
          datasets: [
            { data: values }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { position: "bottom" } }
        }
      });
    })();

    // ==== CUSTOMERS: segments + new vs returning ====
    (function () {
      const el = document.getElementById("advancedCustomerSegmentChart");
      if (!el || !advCustomers.segments) return;

      const segments = advCustomers.segments || {};
      const labels = Object.keys(segments);
      const values = labels.map(k => segments[k] || 0);
      if (!labels.length) return;

      new Chart(el, {
        type: "bar",
        data: {
          labels,
          datasets: [
            {
              label: "Số khách",
              data: values,
              borderWidth: 1
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { display: false } },
          scales: { y: { beginAtZero: true, precision: 0 } }
        }
      });

      // LTV text
      const ltv = advCustomers.ltvStats || {};
      const textEl = document.getElementById("advancedCustomerLtvText");
      if (textEl && (ltv.avg || ltv.min || ltv.max)) {
        const fmt = v => (v || 0).toLocaleString("vi-VN", { style: "currency", currency: "VND" });
        textEl.textContent =
          "LTV (min / avg / max): " + fmt(ltv.min) + " / " + fmt(ltv.avg) + " / " + fmt(ltv.max);
      }
    })();

    (function () {
      const el = document.getElementById("advancedCustomerNewReturningChart");
      if (!el || !advCustomers.newVsReturning) return;

      const nv = advCustomers.newVsReturning || {};
      const labels = ["Khách mới", "Khách quay lại"];
      const values = [nv.new || 0, nv.returning || 0];
      if (!values.some(v => v > 0)) return;

      new Chart(el, {
        type: "doughnut",
        data: {
          labels,
          datasets: [
            { data: values }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { position: "bottom" } }
        }
      });
    })();

    // ==== ORDERS: status + channel, AOV ====
    (function () {
      const el = document.getElementById("advancedOrderStatusChart");
      if (!el || !advOrders.statusDistribution) return;

      const arr = advOrders.statusDistribution || [];
      const labels = arr.map(x => x.status);
      const values = arr.map(x => x.count || 0);
      if (!labels.length) return;

      new Chart(el, {
        type: "pie",
        data: {
          labels,
          datasets: [
            { data: values }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { position: "bottom" } }
        }
      });
    })();

    (function () {
      const el = document.getElementById("advancedOrderChannelChart");
      if (!el || !advOrders.channelDistribution) return;

      const arr = advOrders.channelDistribution || [];
      const labels = arr.map(x => x.channel || x.label || "N/A");
      const values = arr.map(x => x.count || 0);

      if (!labels.length) {
        // vẫn hiển thị AOV nếu có, dù k có chart
        const aovText = document.getElementById("advancedOrderAovText");
        if (aovText && advOrders.avgOrderValue) {
          aovText.textContent =
            "AOV: " + advOrders.avgOrderValue.toLocaleString("vi-VN", {
              style: "currency",
              currency: "VND",
            });
        }
        return;
      }

      new Chart(el, {
        type: "doughnut",
        data: {
          labels,
          datasets: [
            { data: values }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { position: "bottom" } }
        }
      });

      const aovText = document.getElementById("advancedOrderAovText");
      if (aovText && advOrders.avgOrderValue) {
        aovText.textContent =
          "AOV: " + advOrders.avgOrderValue.toLocaleString("vi-VN", {
            style: "currency",
