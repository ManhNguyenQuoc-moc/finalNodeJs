          </div>
          <div class="pb-2"></div>
        </div>
      </div>
    </section>

    <div class="mb-3 mb-xl-5 pt-1 pb-4"></div>
    <section class="products-grid container">
      <h2 class="section-title text-center mb-3 pb-xl-3 mb-xl-4">Danh mục sản phẩm</h2>

      <div class="row">

        <% (products.length > 16 ? products.slice(0, 16) : products).forEach(product_list => { %>
          <div class="col-6 col-md-4 col-lg-3">
            <div class="product-card product-card_style3 mb-3 mb-md-4 mb-xxl-5">
              <div class="pc__img-wrapper">
                <a href="/product_detail/<%= product_list.id %>">
                  <img loading="lazy"
                      src="<%= product_list.colors && product_list.colors.length > 0 && product_list.colors[0].imageUrls.length > 0 
                              ? product_list.colors[0].imageUrls[0] 
                              : '/images/default.png' %>"
                      width="258" height="313"
                      alt="<%= product_list.name %>" class="pc__img">

                  <img loading="lazy"
                      src="<%= product_list.colors && product_list.colors.length > 0 && product_list.colors[0].imageUrls.length > 1 
                              ? product_list.colors[0].imageUrls[1] 
                              : (product_list.colors.length > 0 && product_list.colors[0].imageUrls.length > 0 
                                  ? product_list.colors[0].imageUrls[0] 
                                  : '/images/default.png') %>"
                      width="258" height="313"
                      alt="<%= product_list.name %>" class="pc__img pc__img-second">

                  <img class="category-banner__frame" 
                      src="<%= product_list.productStatus && product_list.productStatus.statusName === 'Bán chạy' 
                              ? '/mixishop/images/frame_banchay.png' 
                              : (product_list.productStatus && product_list.productStatus.statusName === 'Trending' 
                                  ? '/mixishop/images/frame_trending.png' 
                                  : '/mixishop/images/frame_new.png') %>" 
                      alt="Status Frame">
                </a>
              </div>

              <!-- Swatch images -->
              <div class="d-flex align-items-center mt-1 custom-swatch-container">
                <% if (product_list.colors && product_list.colors.length > 0) { %>
                  <% product_list.colors.forEach(productColor => { %>
                    <a href="#" class="swatch-color custom-swatch-color"
                      style="background-image: url(<%= productColor.imageUrls.length > 0 ? productColor.imageUrls[0] : '' %>); background-size: cover;"
                      data-images="<%= productColor.imageUrls && productColor.imageUrls.length > 0 ? productColor.imageUrls.join(',') : '' %>"
                      onclick="changeColor(this); return false;"
                      title="<%= productColor.color %>"></a>
                  <% }) %>
                <% } %>
              </div>

              <div class="pc__info position-relative">
                <h3 class="pc__title">
                  <a href="/product_detail/<%= product_list.id %>"><%= product_list.name %></a>
                </h3>

                <p class="small text-muted"><%= product_list.short_description %></p>

                <div class="product-card__rating mb-1">
                  ⭐ <%= product_list.avg_rating %> / 5 
                  (<%= product_list.rating_count %> đánh giá)
                </div>

                <div class="product-card__price d-flex align-items-center">
                  <span class="money price text-secondary" style="color: blue;">
                    <%= product_list.getFormattedPrice ? product_list.getFormattedPrice(product_list.price) : ('$' + product_list.price) %>
                  </span>
                  
                </div>

                <div class="anim_appear-bottom position-absolute bottom-0 start-0 end-0 d-none d-sm-flex justify-content-between align-items-center bg-body px-3">
                  <!-- Nút thêm giỏ hàng (bên trái) -->
                  <a href="/product_detail/<%= product_list.id %>"
                    class="btn-icon btn-link btn-link_lg fw-medium"
                    title="Thêm vào giỏ hàng">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                      <use href="#icon_cart" />
                    </svg>
                    <span class="ms-2 small-text">Thêm giỏ hàng</span>
                  </a>

                  <!-- Nút yêu thích (bên phải) -->
                  <button class="pc__btn-wl bg-transparent border-0 js-add-wishlist" title="Thêm yêu thích">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                      <use href="#icon_heart" />
                    </svg>
                  </button>
                </div>

              </div>
            </div>
          </div>
        <% }) %>

      </div><!-- /.row -->

      <div class="text-center mt-2">
        <a class="btn-link btn-link_lg default-underline text-uppercase fw-medium" href="/category/alls">Xem tất cả</a>
      </div>
    </section>
  </div>

  <div class="mb-3 mb-xl-5 pt-1 pb-4"></div>

