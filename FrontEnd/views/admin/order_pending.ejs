<!doctype html>
<html lang="en">
<head>
    <%- include('../fragments/head_dashboard') %>
</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-color="purple" data-image="/mixishop/images/sidebar-5.jpg">
        <div class="sidebar-wrapper">
            <div class="logo">
                <a href="http://www.creative-tim.com" class="simple-text">
                    MIXISHOP
                </a>
            </div>

            <ul class="nav">
                <li>
                    <a href="/admin">
                        <i class="pe-7s-graph"></i>
                        <p>Trang chủ</p>
                    </a>
                </li>
                <li>
                    <a href="/admin/categogy">
                        <i class="pe-7s-note2"></i>
                        <p>Danh sách nhóm sản phẩm</p>
                    </a>
                </li>
                <li>
                    <a href="/admin/products">
                        <i class="pe-7s-note2"></i>
                        <p>Danh sách sản phẩm</p>
                    </a>
                </li>
                <li>
                    <a href="/admin/order-list">
                        <i class="pe-7s-note2"></i>
                        <p>Danh sách đơn hàng</p>
                    </a>
                </li>
                <li class="active">
                    <a href="/admin/order-pending">
                        <i class="pe-7s-note2"></i>
                        <p>Danh sách đơn hàng chờ phê duyệt</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Danh Sách Sản Phẩm Chờ Xử Lý</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/logout" onclick="return confirm('Bạn có chắc chắn muốn đăng xuất?');">
                                <p>Đăng xuất</p>
                            </a>
                        </li>
                        <li class="separator hidden-lg hidden-md"></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="title">Danh Sách Sản Phẩm Chờ Xử Lý</h4>
                                    <p class="category">Chào mừng bạn đã quay lại</p>
                                </div>
                            </div>
                            <div class="content table-responsive table-full-width">
                                <table class="table table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên khách hàng</th>
                                        <th>Số điện thoại</th>
                                        <th>Ngày đặt</th>
                                        <th>Hình thức thanh toán</th>
                                        <th>Tổng giá</th>
                                        <th>Ghi chú</th>
                                        <th>Tùy chọn</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% orders.content.forEach(function(order) { %>
                                        <tr>
                                            <td><%= order.id %></td>
                                            <td><%= order.customerName %></td>
                                            <td><%= order.customerPhone %></td>
                                            <td><%= order.orderDate %></td>
                                            <td><%= order.paymentMethod %></td>
                                            <td><%= order.totalAmount %></td>
                                            <td><%= order.notes %></td>
                                            <td>
                                                <form action="/admin/orders/complete-pending/<%= order.id %>" method="post" style="display: inline;">
                                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn chắc chắn sẽ phê duyệt?');">Phê duyệt</button>
                                                </form>
                                                <a href="/admin/orders/<%= order.id %>/details-pending" class="btn btn-success">Chi tiết</a>
                                                <form action="/admin/orders/complete-pending-delete/<%= order.id %>" method="post" style="display: inline;">
                                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này?');">Xoá</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }); %>
                                    </tbody>
                                </table>
                                <div class="pagination" style="display: flex; justify-content: flex-end; margin-top: 20px;">
                                    <% if (orders.hasPrevious) { %>
                                        <a href="/admin/order-pending?pageNo=<%= orders.number %>" class="btn btn-default" style="color: black; background-color: lightgray;">Trang trước</a>
                                    <% } %>

                                    <% for (let i = 1; i <= orders.totalPages; i++) { %>
                                        <a href="/admin/order-pending?pageNo=<%= i %>" class="<%= (i === orders.number + 1) ? 'btn btn-primary' : 'btn btn-default' %>" style="color: black; background-color: lightgray; margin: 0 5px;"><%= i %></a>
                                    <% } %>

                                    <% if (orders.hasNext) { %>
                                        <a href="/admin/order-pending?pageNo=<%= orders.number + 2 %>" class="btn btn-default" style="color: black; background-color: lightgray;">Trang tiếp theo</a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Core JS Files -->
<script src="/mixishop/admin/js/jquery.3.2.1.min.js" type="text/javascript"></script>
<script src="/mixishop/admin/js/bootstrap.min.js" type="text/javascript"></script>
<!-- Charts Plugin -->
<script src="/mixishop/admin/js/chartist.min.js"></script>
<!-- Notifications Plugin -->
<script src="/mixishop/admin/js/bootstrap-notify.js"></script>
<!-- Google Maps Plugin -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
<!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
<script src="/mixishop/admin/js/light-bootstrap-dashboard.js"></script>
<!-- Light Bootstrap Table DEMO methods -->
<script src="/mixishop/admin/js/demo.js"></script>

</body>
</html>