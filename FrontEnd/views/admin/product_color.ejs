<!doctype html>
<html lang="en">
<head>
    <%- include('../partials/head_dashboard') %>
</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-color="purple" data-image="/mixishop/images/sidebar-5.jpg">
        <div class="sidebar-wrapper">
            <div class="logo">
                <a href="http://www.creative-tim.com" class="simple-text">
                    MIXISHOP
                </a>
            </div>

            <ul class="nav">
                <li><a href="/admin"><i class="pe-7s-graph"></i><p>Trang chủ</p></a></li>
                <li><a href="/admin/categogy"><i class="pe-7s-note2"></i><p>Danh sách nhóm sản phẩm</p></a></li>
                <li class="active"><a href="/admin/products"><i class="pe-7s-note2"></i><p>Danh sách sản phẩm</p></a></li>
                <li><a href="/admin/order-list"><i class="pe-7s-note2"></i><p>Danh sách đơn hàng</p></a></li>
                <li><a href="/admin/order-pending"><i class="pe-7s-note2"></i><p>Danh sách đơn hàng chờ phê duyệt</p></a></li>
            </ul>
        </div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Màu Sắc Của Sản Phẩm</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/logout" onclick="return confirm('Bạn có chắc chắn muốn đăng xuất?');">
                                <p>Đăng xuất</p>
                            </a>
                        </li>
                        <li class="separator hidden-lg hidden-md"></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="title">Màu Sắc Của Sản Phẩm</h4>
                                    <p class="category">Chào mừng bạn đã quay lại</p>
                                </div>
                                <div class="text-right">
                                    <a href="/admin/products/color/<%= product.id %>/add" class="btn btn-primary">Thêm màu sắc</a>
                                </div>
                            </div>
                            <div class="content table-responsive table-full-width">
                                <table class="table table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Tên sản phẩm</th>
                                        <th>Màu</th>
                                        <th>Ảnh</th>
                                        <th>Tùy chọn</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% productColors.forEach(function(productColor) { %>
                                        <tr>
                                            <td><%= productColor.product.name %></td>
                                            <td><%= productColor.color %></td>
                                            <td>
                                                <% productColor.imageUrls.forEach(function(imageUrl) { %>
                                                    <img src="<%= imageUrl %>" alt="Product Image" style="max-width: 60px; max-height: 60px; width: auto; height: auto;">
                                                <% }); %>
                                            </td>
                                            <td>
                                                <a href="/admin/products/color/updateColor/<%= productColor.id %>" class="btn btn-success">Sửa</a>
                                                <a href="/admin/deleteProductColor/<%= productColor.id %>" class="btn btn-danger"
                                                   onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?');">Xóa</a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Core JS Files -->
<script src="/mixishop/admin/js/jquery.3.2.1.min.js" type="text/javascript"></script>
<script src="/mixishop/admin/js/bootstrap.min.js" type="text/javascript"></script>
<script src="/mixishop/admin/js/chartist.min.js"></script>
<script src="/mixishop/admin/js/bootstrap-notify.js"></script>
<script src="/mixishop/admin/js/light-bootstrap-dashboard.js"></script>
<script src="/mixishop/admin/js/demo.js"></script>

</body>
</html>
