<script>
(function(){
  const pid = '<%= product._id %>';
  const isLoggedIn = <%= loggedInUser ? 'true' : 'false' %>;

  const socket = window.io ? io() : null;
  const listEl = document.getElementById('qaList');

  // Tạo node bình luận
  function createCommentNode(c){
    const li = document.createElement('li');
    li.className = 'comment-item mb-3';
    li.dataset.id = c.id;
    li.dataset.parent = c.parentId || '';
    li.innerHTML = `
      <div class="chat-bubble">
        <div class="chat-meta mb-1">${new Date(c.createdAt).toLocaleString('vi-VN')}</div>
        <div><strong>${escapeHtml(c.user)}</strong></div>
        <div class="mb-2">${escapeHtml(c.message)}</div>
        <div class="d-flex align-items-center gap-3">
          <button class="btn btn-link btn-xxs p-0 reply-btn" data-id="${c.id}">Trả lời</button>
          <button class="like-btn" data-id="${c.id}">
            <span class="heart">🤍</span>
            <span class="likes-count">${c.likes || 0}</span>
          </button>
        </div>
        <form class="reply-form mt-2 d-none" data-parent="${c.id}">
          ${!isLoggedIn ? '<input class="form-control form-control-sm mb-2" name="name" placeholder="Tên (tuỳ chọn)">' : ''}
          <textarea class="form-control form-control-sm mb-2" name="message" placeholder="Viết trả lời..." required></textarea>
          <button class="btn btn-primary btn-xxs">Gửi</button>
        </form>
      </div>
      <ul class="children list-unstyled ms-3 mt-2"></ul>
    `;
    return li;
  }

  function insertComment(c){
    const node = createCommentNode(c);
    if (c.parentId) {
      const parentLi = listEl.querySelector(`.comment-item[data-id="${c.parentId}"]`);
      const children = parentLi?.querySelector(':scope > .children');
      (children || listEl).prepend(node);
    } else {
      listEl.prepend(node);
    }
    // bỏ dòng "Chưa có bình luận..."
    const empty = listEl.querySelector('.text-muted'); if (empty) empty.remove();
  }

  // Cho khối JS phía trên có thể gọi
  window.insertComment = insertComment;

  function escapeHtml(s){return (s||'').replace(/[&<>"']/g,m=>({ '&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#039;' }[m]));}

  // Toggle form trả lời + thả tim
  document.addEventListener('click', async (e) => {
    const replyBtn = e.target.closest('.reply-btn');
    if (replyBtn) {
      const li = replyBtn.closest('.comment-item');
      const form = li.querySelector('.reply-form');
      form.classList.toggle('d-none');
      form.querySelector('textarea')?.focus();
      return;
    }
    const likeBtn = e.target.closest('.like-btn');
    if (likeBtn) {
      const cid = likeBtn.dataset.id;
      try {
        const res = await fetch(`/api/products/${pid}/comments/${cid}/like`, { method:'POST' });
        const data = await res.json();
        if (data.ok) {
          const heart = likeBtn.querySelector('.heart');
          const count = likeBtn.querySelector('.likes-count');
          heart.textContent = data.liked ? '❤️' : '🤍';
          count.textContent = data.likes;
        } else {
          alert(data.error || 'Không thể thả tim');
        }
      } catch(err){ console.error(err); }
    }
  });

  // Submit form trả lời (event delegation)
  document.addEventListener('submit', async (e) => {
    const form = e.target.closest('.reply-form');
    if (!form) return;
    e.preventDefault();
    const parentId = form.dataset.parent;
    const fd = new FormData(form);
    const payload = Object.fromEntries(fd.entries());
    payload.parentId = parentId;
    try{
      const res = await fetch(`/api/products/${pid}/comments`, {
        method:'POST', headers:{'Content-Type':'application/json'},
        body: JSON.stringify(payload)
      });
      const data = await res.json();
      if (data.ok){
        form.reset(); form.classList.add('d-none');
        if (!socket) insertComment(data.comment); // fallback nếu không dùng socket
      } else alert(data.error || 'Gửi trả lời thất bại');
    } catch(err){ console.error(err); }
  });

  
})();
</script>


