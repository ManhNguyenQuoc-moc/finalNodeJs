    <% const _avg = Number(product.avg_rating || 0);
       const _count = Number(product.rating_count || 0);
       const _rounded = Math.round(_avg);
    %>

    <div class="row g-4 align-items-center">
      <!-- Cột tổng điểm -->
      <div class="col-md-4">
        <div class="display-4 fw-bold">
          <span><%= _avg.toFixed(1) %></span><span class="fs-4">/5</span>
        </div>
        <div class="mt-1">
          <% for (let i=1;i<=5;i++){ %>
            <i class="star <%= i<=_rounded ? 'filled' : '' %>">★</i>
          <% } %>
        </div>
        <div class="small text-muted mt-2"><%= _count %> lượt đánh giá</div>
      </div>

      <!-- (Tuỳ chọn) bạn có thể bỏ 2 cột còn lại hoặc để nội dung marketing -->
      <div class="col-md-8">
        <div class="text-muted">
          Sản phẩm được người dùng đánh giá trung bình <strong><%= _avg.toFixed(1) %>/5</strong>.
        </div>
      </div>
    </div>

    <hr class="my-3">

    <!-- Khối “Chấm sao của bạn” có thể giữ nguyên UI, chỉ bỏ phụ thuộc biến server -->
    <div class="mb-2">Chấm sao của bạn:</div>
    <div id="ratingBox" class="rating-box" data-current="0">
      <% for (let i = 1; i <= 5; i++) { %>
        <i class="rate-star" data-star="<%= i %>">★</i>
      <% } %>
    </div>
    <div class="small text-muted mt-2">Nhấp vào số sao để đánh giá</div>
  </div>
</section>


