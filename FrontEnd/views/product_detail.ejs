(function(){
  const productId = '<%= product._id %>';
  const loggedIn = <%= loggedInUser ? 'true' : 'false' %>;

  // ========== SOCKET ==========
  const socket = window.io ? io() : null;

  if (socket) {
    socket.on('new-comment', ({ productId: pid, comment }) => {
      if (pid !== productId) return;
      // Ưu tiên UI mới (thread + tim). Nếu chưa có, dùng tạm UI cũ.
      if (window.insertComment) window.insertComment(comment);
      else appendComment(comment);
    });

    socket.on('rating-updated', ({ productId: pid, stats }) => {
      if (pid === productId) updateRatingSummary(stats);
    });
  }

  // ========== BÌNH LUẬN ==========
  const btnSend = document.getElementById('btnSendComment');
  const inputName = document.getElementById('cmtName');
  const inputMsg  = document.getElementById('cmtMessage');
  const listEl    = document.getElementById('qaList');

  function appendComment(c){
    // nếu đang có “chưa có bình luận”, bỏ nó đi
    const emptyItem = listEl.querySelector('.text-muted');
    if (emptyItem) emptyItem.remove();
    const li = document.createElement('li');
    li.className = 'cmt-item py-2 border-bottom';
    li.innerHTML = `
      <div class="small text-muted">
        <strong>${escapeHtml(c.user)}</strong> • ${new Date(c.createdAt).toLocaleString()}
      </div>
      <div>${escapeHtml(c.message)}</div>
    `;
    listEl.prepend(li);
  }

  function escapeHtml(str){
    return (str || '').replaceAll('&','&amp;').replaceAll('<','&lt;').replaceAll('>','&gt;');
  }

  if (btnSend) {
    btnSend.addEventListener('click', async () => {
      const message = (inputMsg.value || '').trim();
      const name = (inputName.value || '').trim();
      if (message.length < 2) {
        alert('Nội dung quá ngắn');
        return;
      }
      try {
        const res = await fetch(`/api/products/${productId}/comments`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, message })
        });
        const data = await res.json();
        if (!res.ok) throw new Error(data.error || 'Lỗi gửi bình luận');
        // tự hiển thị ngay nếu server không phát socket
        if (!socket) appendComment(data.comment);
        inputMsg.value = '';
      } catch(err){
        alert(err.message || 'Đã có lỗi xảy ra');
      }
    });
  }

  // ========== ĐÁNH GIÁ SAO ==========
  const ratingBox = document.getElementById('ratingBox');
  const summaryWrap = document.getElementById('ratingSummary');
  const ratingAvgEl = document.getElementById('ratingAvg');
  const ratingCountEl = document.getElementById('ratingCount');

  function paintStars(el, value){
    el.querySelectorAll('.rate-star, .star').forEach(st => {
      const s = parseInt(st.getAttribute('data-star') || '0', 10);
      if (s && s <= value) st.classList.add('filled'); else st.classList.remove('filled');
    });
  }

  function updateRatingSummary(stats){
    const rounded = Math.round(stats.avg || 0);
    // làm lại 5 sao trong summary
    if (summaryWrap) {
      summaryWrap.innerHTML = '';
