<section id="section-qa" class="container pdp-section">
  <div class="qa-card">
    <div class="qa-hero">
      <div class="qa-hero__img">
        <img src="/mixishop/images/mascot.png" alt="Mascot">
      </div>
      <div class="flex-grow-1">
        <div class="qa-title">Hãy đặt câu hỏi cho chúng tôi</div>
        <div class="qa-desc">
          Chúng tôi phản hồi trong ~1 giờ. Nếu câu hỏi sau 22h, sẽ trả lời sáng hôm sau.
        </div>
        <form id="qaForm" class="qa-input" onsubmit="return false;">
          <input type="text" class="form-control" id="qaMessage" placeholder="Viết câu hỏi của bạn tại đây">
          <button class="btn-ask" id="btnAsk">Gửi câu hỏi ✈️</button>
        </form>
      </div>
    </div>

    <!-- Danh sách Q&A -->
    <div class="mt-3">
      <ul id="qaList" class="list-unstyled m-0">
        <% const _qa = (reviews||[]).filter(x=>!x.parentId); %>
        <% if(!_qa.length){ %>
          <li class="text-muted p-3">Chưa có câu hỏi nào. Hãy là người đầu tiên!</li>
        <% } %>
        <% _qa.forEach(function(q){ 
             const liked = !!(q.likedBy && likerId && q.likedBy[likerId]);
             const children = (reviews||[]).filter(a=>a.parentId===q.id);
        %>
          <li class="comment-item p-3 border-bottom" data-id="<%= q.id %>">
            <div class="d-flex justify-content-between">
              <div>
                <strong><%= q.user||'Khách' %></strong>
                <span class="small text-muted">• <%= new Date(q.createdAt).toLocaleString('vi-VN') %></span>
              </div>
            </div>
            <div class="mt-1"><%= q.message %></div>
            <div class="d-flex align-items-center gap-3 mt-2">
              <button class="btn btn-link btn-xxs p-0 reply-btn" data-id="<%= q.id %>">Phản hồi</button>
              <button class="like-btn" data-id="<%= q.id %>">
                <span class="heart"><%= liked?'❤️':'🤍' %></span>
                <span class="likes-count"><%= q.likes||0 %></span>
              </button>
            </div>

            <form class="reply-form mt-2 d-none" data-parent="<%= q.id %>">
              <textarea class="form-control form-control-sm mb-2" name="message" placeholder="Viết trả lời..." required></textarea>
              <button class="btn btn-primary btn-xxs">Gửi</button>
            </form>

            <ul class="children list-unstyled ms-3 mt-2">
              <% if(children.length>2){ %>
                <li><a href="#" class="toggle-replies small text-danger" data-id="<%= q.id %>">Xem thêm <%= children.length %> phản hồi</a></li>
              <% } %>
              <% children.forEach(function(a,i){ 
                   const likedA = !!(a.likedBy && likerId && a.likedBy[likerId]);
              %>
