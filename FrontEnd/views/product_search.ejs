  <main>
    <div class="mb-4 pb-lg-3"></div>

    <section class="shop-main container">
      <div class="d-flex justify-content-between mb-4 pb-md-2">
        <p style="font-size: 1.2rem;">Có <%= quantity %> kết quả phù hợp với: <%= keyword %></p>
      </div>

      <div class="products-grid row row-cols-2 row-cols-md-3 row-cols-lg-4" id="products-grid">
        <% products.forEach(function(product) { %>
          <div class="col-6 col-md-4 col-lg-3">
            <div class="product-card product-card_style3 mb-3 mb-md-4 mb-xxl-5">
              <div class="pc__img-wrapper">
                <a href="/product_detail/<%= product.id %>">
                  <img loading="lazy"
                       src="<%= product.colors.length > 0 ? product.colors[0].imageUrls[0] : '/mixishop/images/default.png' %>"
                       width="258" height="313"
                       alt="<%= product.name %>" class="pc__img">
                  <img loading="lazy"
                       src="<%= product.colors.length > 0 && product.colors[0].imageUrls.length > 1 ? product.colors[0].imageUrls[1] : (product.colors.length > 0 && product.colors[0].imageUrls.length > 0 ? product.colors[0].imageUrls[0] : '/mixishop/images/default.png') %>"
                       width="258" height="313"
                       alt="<%= product.name %>" class="pc__img pc__img-second">
                  <img class="category-banner__frame"
                       src="<%= product.productStatus.statusName === 'Bán chạy' ? '/mixishop/images/frame_banchay.png' : (product.productStatus.statusName === 'Trending' ? '/mixishop/images/frame_trending.png' : '/mixishop/images/frame_new.png') %>"
                       alt="Status Frame">
                </a>
              </div>

              <div class="d-flex align-items-center mt-1 custom-swatch-container">
                <% product.colors.forEach(function(productColor) { %>
                  <a href="#"
                     class="swatch-color custom-swatch-color"
                     style="background-image: url('<%= productColor.imageUrls.length > 0 ? productColor.imageUrls[0] : '' %>'); background-size: cover;"
                     data-images="<%= productColor.imageUrls.length > 0 ? productColor.imageUrls[0] : '' %><%= productColor.imageUrls.length > 1 ? ',' + productColor.imageUrls[1] : '' %><%= productColor.imageUrls.length > 2 ? ',' + productColor.imageUrls[2] : '' %>"
                     onclick="changeColor(this); return false;"
                     title="<%= productColor.color %>"></a>
                <% }) %>
              </div>

              <div class="pc__info position-relative">
                <h3 class="pc__title"><a href="/product_detail/<%= product.id %>" ><%= product.name %></a></h3>
                <div class="product-card__price d-flex align-items-center">
                  <span class="money price text-secondary" style="color: blue;"><%= product.getFormattedPrice(product.price) %></span>
                </div>

                <div class="anim_appear-bottom position-absolute bottom-0 start-0 d-none d-sm-flex align-items-center bg-body">
                  <a href="/product_detail/<%= product.id %>"
                     class="btn-icon btn-link btn-link_lg me-4 fw-medium"
                     title="Thêm vào giỏ hàng">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <use href="#icon_cart" />
                    </svg>
                    <span class="ms-2 small-text">Thêm giỏ hàng</span>
                  </a>

                  <button class="btn-icon btn-link btn-link_lg me-4 fw-medium js-quick-view" data-bs-toggle="modal" data-bs-target="#quickView" title="Quick View">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><use href="#icon_view" /></svg>
                    <span class="ms-2 small-text">Chi tiết</span>
                  </button>

                  <button class="pc__btn-wl bg-transparent border-0 js-add-wishlist" title="Thêm yêu thích">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><use href="#icon_heart" /></svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
